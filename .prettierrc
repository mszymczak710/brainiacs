{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "endOfLine": "crlf",
  "bracketSameLine": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "printWidth": 80,
        "htmlWhitespaceSensitivity": "css",
        "parser": "angular"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "semi": true,
        "printWidth": 80,
        "useTabs": true
      }
    },
    {
      "files": "*.scss",
      "options": {
        "useTabs": false,
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "useTabs": false
      }
    }
  ]
}
